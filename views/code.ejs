<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/partial.ejs') %>
    <link rel="stylesheet" href="/static/css/code.css">
</head>
<body>

    <main>

        <h2 class="heading">API & Integration</h2>

        <a href="/form">Post Codes</a><br>
        <a href="/">View Codes</a>

        <div class="code-view">
            <p class="title"><b><%- record.title %></b></p><br>
            <p class="title">Short Url- <a href="<%- shortUrl %> " class="copy"><%- shortUrl %> </a></p>
            <button onclick="func()" id="copybutton">Copy Link</button><br>
            <!-- <button onclick=">Copy Links</button> -->
            <p class="code">
                <%- record.code %> 
            </p>
        </div>
    </main>
    <div class="footer">
        <p>Name: Ishan Pattnayak , College: IIIT BBSR</p>
      </div>

      <script>
          // To copy link
          function func() {
                text = document.querySelector(".copy").innerHTML;
                console.log(text)
                navigator.clipboard.writeText(text).then(function () {
                    /* clipboard successfully set */
                    document.getElementById("copybutton").innerHTML = "Copied!";
                    console.log("Successful");
                }, function () {
                    /* clipboard write failed */
                    console.log("Failed");
                });

            }
    </script>
</body>

</html>